class Solution {
    // Function to convert a binary tree into its mirror tree.
    void mirror(Node node) {
        // Your code here
        
        Queue<Node>q=new LinkedList<>();
        
        q.add(node);
        
        while(!q.isEmpty())
        {
            Node root=q.poll();
            
            Node l=root.left;
            Node r=root.right;
            
            root.left=r;
            root.right=l;
            
            if(root.left!=null)
            {
                q.add(root.left);
            }
            if(root.right!=null)
            {
                q.add(root.right);
            }
        }
    }
}
